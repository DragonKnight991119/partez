{% set title = [app_title, _params.title|default(_params.name)|capitalize]|join(" | ") %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A simple PHP starter to deploy your web app in a few clicks!">
    <meta name="author" content="Antoine Bollinger">
    {% block meta %}
    <meta name="twitter:image:src" content="{{ app_subri }}/public/images/preview.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="PHP Starter by Antoine Bollinger" />
    <meta name="twitter:description" content="A simple PHP starter to deploy your web app in a few clicks!" />
    <meta property="og:image" content="{{ app_subri }}/public/images/preview.jpg" />
    <meta property="og:image:alt" content="A simple PHP starter to deploy your web app in a few clicks!" />
    <meta property="og:image:width" content="1280" />
    <meta property="og:image:height" content="640" />
    <meta property="og:site_name" content="PHP Starter" />
    <meta property="og:type" content="object" />
    <meta property="og:title" content="PHP Starter by Antoine Bollinger" />
    <meta property="og:url" content="" />
    <meta property="og:description" content="A simple PHP starter to deploy your web app in a few clicks!" />
    {% endblock %}
    <link rel="icon" type="image/png" href="{{ app_subdir }}/public/favicon.png"/>
    <link rel="stylesheet" type="text/css" href="{{ app_subdir }}/public/css/style.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"/>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script defer src="{{ app_subdir }}/public/js/script.js" type="module"></script>
    <link rel="icon" type="image/ico" href="{{ app_subdir }}/public/favicon.ico"/>    
    <title>{{ title }}</title>
</head>
{% block body %}
<body>
    {% block navbar %}
        {% include 'includes/navbar.html.twig' %}
    {% endblock %}
    {% block main %}
    <main class="container">
        {{ content|raw }}
    </main>    
    {% endblock %}
</body>
{% endblock %}
</html>